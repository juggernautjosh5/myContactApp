<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.macbookstudiopro.mycontactapp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:text="Age"
        android:textAlignment="viewStart"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:text="Gender"
        android:textAlignment="viewStart"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="109dp"
        android:layout_height="35dp"
        android:text="Name"
        android:textAlignment="viewStart"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText_Name"
        android:layout_width="176dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText_Gender"
        android:layout_width="176dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_Age" />

    <EditText
        android:id="@+id/editText_Age"
        android:layout_width="176dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_Name"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:nestedScrollingEnabled="true"
        android:onClick="addData"
        android:text="Add"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_getData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="viewData"
        android:text="Get Data"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_Gender"
        android:layout_marginRight="60dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
